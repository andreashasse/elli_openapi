{erl_opts, [debug_info, warn_unused_import, warnings_as_errors]}.

%%warn_missing_spec

{shell,
 %% {config, "config/sys.config"},
 [{apps, [elli_openapi]}]}.

{profiles, [{test, [{erl_opts, [nowarn_missing_spec]}]}]}.

{deps,
 [{elli, "3.3.0"},
  {erldantic, {git, "https://github.com/andreashasse/erldantic.git", {branch, "main"}}},
  {eqwalizer_support,
   {git_subdir,
    "https://github.com/whatsapp/eqwalizer.git",
    {branch, "main"},
    "eqwalizer_support"}}]}.

{hank,
 [{ignore,
   %% Ignore test files.
   ["test/*.erl"]}]}.

{project_plugins, [rebar3_format, rebar3_hank, rebar3_lint]}.

{plugins, [rebar3_proper]}.

{dialyzer, [{plt_apps, all_deps}, {warnings, [unknown, underspecs]}]}.

{cover_enabled, true}.

{cover_opts, [verbose]}.

{cover_export_enabled, true}.
