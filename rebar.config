{erl_opts, [debug_info, warn_unused_import, warnings_as_errors]}.

{shell, [
    {apps, [elli_openapi]},
    {script_file, "demo.escript"}
]}.

{profiles, [{test, [{erl_opts, [nowarn_missing_spec]}]}]}.

{deps, [
    {elli, "3.3.0"},
    {erldantic, {git, "https://github.com/andreashasse/erldantic.git", {branch, "main"}}},
    {eqwalizer_support,
        {git_subdir, "https://github.com/whatsapp/eqwalizer.git", {branch, "main"},
            "eqwalizer_support"}}
]}.

{hank, [
    {ignore,
        ["test/*.erl"]}
]}.

{project_plugins, [erlfmt, rebar3_hank, rebar3_lint]}.
{erlfmt, [write]}.
{dialyzer, [{plt_apps, all_deps}, {warnings, [unknown, underspecs]}]}.

{cover_enabled, true}.

{cover_opts, [verbose]}.

{cover_export_enabled, true}.
